<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_inmuebles"
    android:padding="12dp"
    tools:context=".ui.inmuebles.InmueblesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaInmuebles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/iteminmueble" />

    <ImageButton
        android:id="@+id/btnNuevoInmueble"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_boton_circular"
        android:src="@drawable/ic_new_home"
        android:contentDescription="Agregar nuevo inmueble"
        android:scaleType="centerInside"
        android:elevation="10dp"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />




</androidx.constraintlayout.widget.ConstraintLayout>