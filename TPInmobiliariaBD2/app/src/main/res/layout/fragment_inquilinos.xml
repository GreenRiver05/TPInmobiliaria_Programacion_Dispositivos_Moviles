<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainDetalleInquilino"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_inmuebles"
    android:padding="24dp"
    tools:context=".ui.inquilinos.InquilinosFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardInquilino"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#EBFFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvTituloInquilino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalle del Inquilino"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <TextView
                android:id="@+id/tvLabelCodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Código"
                android:textSize="14sp"
                android:textStyle="bold"
               android:textColor="@color/grisHint"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvCodigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvLabelNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/grisHint"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvLabelApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apellido"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/grisHint"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvLabelDni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DNI"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/grisHint"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvDni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvLabelTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teléfono"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/grisHint"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvLabelEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/grisHint"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
